
@{
    ViewData["Title"] = "ShowVilles";
}
@model List<string>

<h1>Villes</h1>

<div class="col-6 text-end">
    <a asp-controller="CheckList" asp-action="CreateFile" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> &nbsp; Ajoutez un fichier
    </a>
</div>

<div class="container">
    <div class="row">
        @foreach (var ville in Model)
        {

            <div class="col-6 ">
                <div class="d-grid gap-2">
                    <button class="btn btn-lg btn-info" type="button" onclick="location.href='@Url.Action("CreateFile", "CheckList", new { city = ville})'">
                        @ville
                    </button>
                </div>
            </div>
            <br />
            <br />
            <br />
            <br />

        }
    </div>

</div>