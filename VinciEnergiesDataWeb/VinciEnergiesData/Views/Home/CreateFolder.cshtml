}

@model Dossier

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Ajoutez dossier</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="codeSite"></label>
            <input asp-for="codeSite" class="form-control" />
            <span asp-validation-for="codeSite" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="annee" class="control-label"></label>
            <input asp-for="annee" class="form-control" type="number" min="1900" max="2100" step="1" />
            <span asp-validation-for="annee" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ville"></label>
            <input asp-for="ville" class="form-control" />
            <span asp-validation-for="ville" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="folder"></label>
            <select asp-for="folder" class="form-control" asp-items="Html.GetEnumSelectList<VinciEnergiesData.Enums.FolderType0>()"></select>
            <span asp-validation-for="folder" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="genre"></label>
            <select asp-for="genre" class="form-control" asp-items="Html.GetEnumSelectList<VinciEnergiesData.Enums.GenreFolder0>()"></select>
            <span asp-validation-for="genre" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Ajoutez</button>
        <a asp-controller="DT_B2B" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Annuler
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

